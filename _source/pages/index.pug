    section.tiles
        mixin article(title, disc, img_src, href)
            article.style1
                span.image
                    img(src=img_src alt="")
                a(href=href)
                    h2= title
                    div.content
                        p= disc

        +article(
            'Exploration Or Obedience',
            'A interactive device that encourage people to question the value of religion',
            'images/cover/exploration-or-obedience.jpg',
            'projects/exploration-or-obedience.html')

        +article(
            'PTT Theme',
            'A Chrome Extension for customizing your PTT!',
            'images/cover/ptt-theme.png',
            'projects/ptt-theme.html')

        +article(
            'Fold the Refuge',
            'A refuge formed by foldable components, which is designed for efficient delivery and quick construction.',
            'images/cover/fold.png',
            'projects/fold.html')
        
        +article(
            'NUTS',
            'A map-based campus forum.',
            'images/cover/NUTS.png',
            'projects/NUTS.html')

        +article(
            'Hame',
            'An equipment made for enhancing immersion of FPS games.',
            'images/cover/hame.jpg',
            'projects/hame.html')

        +article(
            'Smart Ped Xing',
            'A more interactive pedestrian crossing.',
            'images/cover/smart-Xing.jpg',
            'projects/smart-xing.html')

        +article(
            'Pi Quadcopter',
            'A quadcopter made of Raspberry Pi and Multiwii.',
            'images/cover/pi-quadcopter.png',
            'projects/pi-quadcopter.html')

        +article(
            'Photography works',
            'My photography works.',
            'images/cover/photography.png',
            'projects/photography.html')
    